<!DOCTYPE html>
<html lang="en">
<head>
    <!-- start header -->
        <%- include('../include/header',{title:'Home'}) %>
        <!-- end header-->
</head>
<body>
    <!-- start body -->
    <%- include('../include/navbar') %>
    <!-- end body -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <h3 class="text-danger text-center mt-3">Search Student</h3>
                <form method="post" action="search_student">
                    <div class="mt-5">
                        <label for="student_roll_number"> Student Roll Number</label>
                        <input type="text" name="roll_number" class="form-control" placeholder="Enter the Roll Number"/>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </form>
                <% if (messages.success) { %>
                    <% messages.success.forEach(function(message) { %>
                        <div class="alert alert-success"><%= message %></div>
                    <% }); %>
                  <% } %>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</body>
</html>